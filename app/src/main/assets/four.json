[
    {
        "title": "四大界",
        "text": "志、意、心、身",
        "summary": "志达佛界，意通天堂，心思苦海，身堕地狱，地狱返天堂，苦海化莲邦。以志为体，以意为用，以身心两界做补助。"
    },
    {
        "title": "志界人",
        "text": "无有说，谓之无心人。"
    },
    {
        "title": "意界人",
        "text": "常知足，谓之静心人。"
    },
    {
        "title": "心界人",
        "text": "好找理，谓之操心人。"
    },
    {
        "title": "身界人",
        "text": "好生气，谓之糟心人。"
    },
    {
        "title": "无心者，谓之佛，佛",
        "text": "恒定不动的志；"
    },
    {
        "title": "净心者，谓之神，神",
        "text": "常乐无忧的意；"
    },
    {
        "title": "操心者，谓之人，人",
        "text": "苦海无边的心；"
    },
    {
        "title": "糟心者，谓之鬼，鬼",
        "text": "万恶阴极的身。"
    },
    {
        "title": "志界夫妻",
        "text": "淡情，生佛子佛孙。"
    },
    {
        "title": "意界夫妻",
        "text": "感情，生孝子贤孙。"
    },
    {
        "title": "心界夫妻",
        "text": "争情，生逆子。"
    },
    {
        "title": "身界夫妻",
        "text": "搅情，生败子。"
    },
